<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="26.67dp">

        <View
            android:id="@+id/vw_top"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="6.67dp"
            android:background="#FAFAFA"/>

        <View
            android:id="@+id/vw_left"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            android:layout_width="4.67dp"
            android:layout_height="28.67dp"
            android:background="@drawable/dynamic_ic_4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/vw_top"
            app:layout_constraintLeft_toRightOf="@+id/vw_left"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="9.33dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="26.67sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            android:layout_marginLeft="18.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="21.33sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_right"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@+id/vw_right"
            app:layout_constraintTop_toTopOf="@+id/vw_right"
            app:layout_constraintBottom_toBottomOf="@+id/vw_right"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="21.33sp"/>

        <View
            android:id="@+id/vw_right"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vw_top"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="26.67dp"
            android:layout_width="12.55dp"
            android:layout_height="22.44dp"
            android:background="@drawable/common_ic_arrow_right"
            android:backgroundTint="#D0D0D0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
