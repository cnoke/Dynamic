<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/common_bg_f8f8f8_20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tv_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vw_line"
            app:layout_constraintBottom_toTopOf="@+id/tv_end"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#5F5F5F"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tv_end"
            app:layout_constraintRight_toLeftOf="@+id/vw_line"
            app:layout_constraintTop_toBottomOf="@+id/tv_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#939393"
            android:textSize="16sp"/>

        <View
            android:id="@+id/vw_line"
            android:layout_width="0.67dp"
            android:layout_height="0dp"
            android:layout_marginLeft="114dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#CECBCB"/>

        <com.knd.common.view.AvatarView
            android:id="@+id/av_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/vw_line"
            android:layout_marginLeft="10dp"
            app:common_avatarView_text_size="20sp"
            android:layout_width="73.33dp"
            android:layout_height="73.33dp"/>

        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/av_img"
            app:layout_constraintBottom_toTopOf="@+id/tv_leader"
            android:layout_marginLeft="18.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_leader"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/av_img"
            app:layout_constraintBottom_toTopOf="@+id/tv_detail"
            android:layout_marginTop="4.67dp"
            android:layout_marginLeft="18.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#25C688"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_leader"
            app:layout_constraintLeft_toRightOf="@+id/av_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="18.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#939393"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:textSize="13.33sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/common_bg_25c688_6_67dp"
            android:text="立即预约"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
