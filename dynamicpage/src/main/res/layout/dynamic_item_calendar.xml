<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_height="28dp">
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="一" />
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="二"/>
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="三" />
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="四" />
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="五" />
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="六" />
            <TextView
                style="@style/dynamic_weekIndicatorStyle"
                android:text="日" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_height="1.86dp"
            android:layout_marginTop="27.33dp"
            android:background="#DCDFE6"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_day"
            android:overScrollMode="never"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_content"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:layout_width="25.97dp"
            android:layout_height="12.98dp"
            android:backgroundTint="#DDDDDD"
            android:background="@mipmap/dynamic_menu_show"/>

    </LinearLayout>
</layout>