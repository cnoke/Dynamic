<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="27.33dp"
            android:layout_marginLeft="25.33dp"
            android:layout_marginBottom="27.33dp"
            android:layout_width="200dp"
            android:layout_height="133.33dp"/>

        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="29.33dp"
            android:layout_marginRight="29dp"
            android:textSize="26.67sp"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_selling"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            android:layout_marginLeft="29.33dp"
            android:layout_width="114.67dp"
            android:layout_height="34dp"
            android:background="@drawable/common_bg_btn_d2d2d2_42dp"
            android:backgroundTint="#1A25C688"
            android:gravity="center"
            android:textColor="#25C688"
            android:textSize="21.33sp"
            android:text="卖点标签"/>

        <TextView
            android:id="@+id/tv_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_selling"
            app:layout_constraintBottom_toBottomOf="@+id/tv_selling"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="29dp"
            android:layout_marginLeft="14.67dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#AAA9A9"
            android:textSize="21.33sp"/>

        <View
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="27.33dp"
            android:layout_marginRight="27.33dp"
            android:layout_width="0dp"
            android:layout_height="0.67dp"
            android:background="#F0F0F0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
