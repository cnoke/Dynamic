<?xml version="1.0" encoding="utf-8"?>
<layer-list android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2dp"
        android:top="2dp"
        >
        <shape>
            <solid android:color="#11000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="4dp"
        android:top="4dp"
        android:left="4dp"
        >
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>