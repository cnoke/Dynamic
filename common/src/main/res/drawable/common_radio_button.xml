<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval" android:dither="true">
                    <size android:width="25dp" android:height="25dp"></size>
                    <gradient android:startColor="#ff3f629d" android:endColor="#ffbe5491" android:angle="45" />
                </shape>
            </item>
            <item android:top="7dp" android:bottom="7dp" android:start="7dp" android:end="7dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="25dp" android:width="25dp"></size>
            <stroke android:width="1dp" android:color="#FF979797"></stroke>
        </shape>
    </item>
</selector>